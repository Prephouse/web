{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 100,
  "proseWrap": "always",
  "arrowParens": "avoid",
  "singleQuote": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@mui/(.*)$",
    "^(.*)[./]libs/(.*)",
    "^(.*)[./]hooks/(.*)",
    "^(.*)[./]schemas/(.*)",
    "^(.*)[./]store/(.*)",
    "^(.*)[./]strings/(.*)",
    "^(.*)[./]styles/(.*)",
    "^(.*)[./]utils/(.*)",
    "^(.*)[./]values/(.*)",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
